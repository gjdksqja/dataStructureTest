package dataStructure.recursion;

public class Sigma {

	private final int sum;
//	public static int f(int n) {
//	    return n;
//	}
	
	public int Sigma() {
		sum = sigma(1,0);
		return sum;
	}
	
	// 해당 함수의 재귀로 
	// 5회 이상이면 중지
	public int sigma (int i, int j ) { // i:  들어온 값, j: 현재 휫수까지의 합
		if(i< 5) {
			return i;
		}
		
		j= i+j;
		i++;
		
		return sigma(i,j);
	}
	
	
	
	
	
}


