package dataStructure.recursion;

public class SplitRecursion {
	int[] sumArr = {5,6,7,8,4,3,2,9}; // length = 8 일때
	
	
	// 반으로 쪼개서 하나씩 더하기
	public int sumFunction(int[] i,int num , int sum) { // i:계산 배열, num: 현재 번호, sum: 합계
		if(i.length == 1 ) {			
			return sum;
		}
		
		sum += i[num];
		num ++;
	
		return sumFunction();
	}
}
